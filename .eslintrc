{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": { 
    "@typescript-eslint/no-var-requires": "off",
    "indent": [
      "error",
      2
    ],
    "linebreak-style" : [
      "error",
      "unix"
    ],
    "semi" : [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "single"
    ]
  }
}